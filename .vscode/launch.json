    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Unit Test",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}",
            "console": "integratedTerminal",
            "purpose": ["debug-test"],
            "justMyCode": true,
            "env": {
                "PYTEST_ADDOPTS": "-m unit --no-cov"
            }
        },
        {
            "name": "Python: Integration Test",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}",
            "console": "integratedTerminal",
            "purpose": ["debug-test"],
            "justMyCode": true,
            "env": {
                "PYTEST_ADDOPTS": "-m integration --no-cov"
            }
        }
    ]
}
